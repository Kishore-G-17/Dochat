<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="#003f5c"
    android:layout_height="match_parent"
    tools:context=".LoginActivity"
    android:gravity="center"
    >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tempRelativeLayout"
            >

            <TextView
            android:layout_width="210dp"
            android:layout_height="wrap_content"
            android:text="D0CHAT"
            android:textFontWeight="800"
            android:textColor="#fb5b5a"
            android:layout_marginLeft="87dp"
            android:textSize="70dp"
            android:layout_marginBottom="20dp"
            android:id="@+id/app_name"
            android:fontFamily="@font/bangers"
            />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/email"
                android:inputType="textEmailAddress"
                android:hint="Email"
                android:fontFamily="@font/quintessential"
                android:drawableBottom="@color/colorPrimary"
                android:layout_below="@id/app_name"
                android:layout_margin="20dp"
                android:drawableStart="@drawable/email"
                android:padding="5dp"
                android:textColor="#fff"
                android:textFontWeight="800"
                android:drawableLeft="@drawable/email"
                android:background="@drawable/edit_text_border_color"
                />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/password"
                android:inputType="textPassword"
                android:hint="password"
                android:fontFamily="@font/quintessential"
                android:drawableBottom="@color/colorPrimary"
                android:layout_below="@id/email"
                android:layout_marginTop="0dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:textFontWeight="800"
                android:drawableStart="@drawable/password"
                android:padding="5dp"
                android:textColor="#fff"
                android:drawableLeft="@drawable/email"
                android:background="@drawable/edit_text_border_color"
                />

            <TextView
                android:id="@+id/forgot_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/password"
                android:layout_marginTop="10dp"
                android:gravity="end"
                android:paddingRight="8dp"
                android:fontFamily="@font/salsa"
                android:text="Forgot password?"
                android:textAlignment="center"
                android:textColor="#fff"
                app:fontFamily="@font/salsa"
                android:textSize="20sp"
                tools:ignore="RtlCompat" />

            <Button
                android:layout_width="260dp"
                android:layout_height="50dp"
                android:layout_below="@id/password"
                android:id="@+id/btn_login"
                android:background="@drawable/button_for_login_signup"
                android:text="LOGIN"
                android:layout_marginLeft="80dp"
                android:layout_marginTop="70dp"
                android:textSize="18sp"
                android:textColor="#fff"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Signup"
                android:layout_below="@id/btn_login"
                android:textColor="#fff"
                android:textAlignment="center"
                android:gravity="center_horizontal"
                android:id="@+id/signup"
                android:layout_marginTop="30dp"
                android:textSize="23sp"
                android:fontFamily="@font/salsa"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="or Login using phone"
                android:layout_below="@id/signup"
                android:textAlignment="center"
                android:gravity="center_horizontal"
                android:textColor="#fff"
                android:layout_marginTop="2dp"
                android:id="@+id/login_phone"
                android:fontFamily="@font/salsa"
                android:textSize="23sp"/>

            <Button
                android:layout_width="260dp"
                android:layout_height="60dp"
                android:layout_below="@id/login_phone"
                android:background="@drawable/button_for_login_signup"
                android:layout_marginLeft="80dp"
                android:layout_marginTop="17dp"
                android:text="Mobile"
                android:textColor="#fff"
                android:textSize="23sp"
                android:textAlignment="viewStart"
                android:id="@+id/btn_phone"
                android:paddingLeft="50dp"
                android:drawableStart="@drawable/phone"
                android:drawableLeft="@drawable/phone" />


        </RelativeLayout>

</RelativeLayout>